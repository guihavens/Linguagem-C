POINTERS (PONTEIROS)
===========================================
#include<stdio.h>

void ponteiro_duplo(int **x);

void ponteiro_duplo(int **x){
    
    printf("%d\n",**x);
}
==========================================
#include <stdio.h>
#include "funcao_template.h"

int main()
{
    int a,*b;
    
    a = 5;
    b = &a;
    
    printf("%x\n",b);// %x exibe um numero hexadecimal
    printf("%p\n",b);//%p exibe um endereco de memoria
    return 0;
}
========================================================
#include <stdio.h>
#include "funcao_template.h"

int main()
{
    int a,*b;
    
    a = 5;
    b = &a;
    
    printf("%p\n",&a);//devolve o valor do endereço da variavel a
    
    ponteiro_duplo(&b);//devolve o conteudo da variavel a
    
    return 0;
}
